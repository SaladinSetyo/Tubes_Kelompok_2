<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Paul Quiz - Fintech Education Platform</display-name>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
    
    <!-- Session Configuration (30 minutes timeout) -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
        </cookie-config>
    </session-config>
    
    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/errors/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/errors/500.jsp</location>
    </error-page>
    
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/WEB-INF/views/errors/500.jsp</location>
    </error-page>
    
    <!-- Security Constraints (to be added later for admin pages) -->
    
    <!-- Servlet Declarations (Manual Registration) -->
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.TestServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>HomepageServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.HomepageServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.auth.LoginServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.auth.RegisterServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.auth.LogoutServlet</servlet-class>
    </servlet>
    
    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>HomepageServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>HomepageServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Servlet -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.admin.AdminDashboardServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    
    <!-- Debug Servlet (REMOVE IN PRODUCTION!) -->
    <servlet>
        <servlet-name>DebugPasswordServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.DebugPasswordServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DebugPasswordServlet</servlet-name>
        <url-pattern>/debug/password</url-pattern>
    </servlet-mapping>
    
    <!-- Module Servlet -->
    <servlet>
        <servlet-name>ModuleServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.ModuleServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ModuleServlet</servlet-name>
        <url-pattern>/modules</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ModuleServlet</servlet-name>
        <url-pattern>/modules/*</url-pattern>
    </servlet-mapping>
    
    <!-- Leaderboard Servlet -->
    <servlet>
        <servlet-name>LeaderboardServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.LeaderboardServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LeaderboardServlet</servlet-name>
        <url-pattern>/leaderboard</url-pattern>
    </servlet-mapping>

    <!-- Profile Servlet -->
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.ProfileServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <!-- Notification Clear Servlet -->
    <servlet>
        <servlet-name>NotificationClearServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.user.NotificationClearServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NotificationClearServlet</servlet-name>
        <url-pattern>/notifications/clear-read</url-pattern>
    </servlet-mapping>

    <!-- Question Management Servlet -->
    <servlet>
        <servlet-name>QuestionManagementServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.admin.QuestionManagementServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QuestionManagementServlet</servlet-name>
        <url-pattern>/admin/questions</url-pattern>
        <url-pattern>/admin/questions/create</url-pattern>
        <url-pattern>/admin/questions/edit</url-pattern>
        <url-pattern>/admin/questions/delete</url-pattern>
    </servlet-mapping>
    
    <!-- Quiz Attempt Servlet -->
    <servlet>
        <servlet-name>QuizAttemptServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.user.QuizAttemptServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QuizAttemptServlet</servlet-name>
        <url-pattern>/quizzes/*</url-pattern>
    </servlet-mapping>
    
    <!-- Content Management Servlet -->
    <servlet>
        <servlet-name>ContentManagementServlet</servlet-name>
        <servlet-class>com.paulquiz.servlet.admin.ContentManagementServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ContentManagementServlet</servlet-name>
        <url-pattern>/admin/contents</url-pattern>
        <url-pattern>/admin/contents/create</url-pattern>
        <url-pattern>/admin/contents/edit</url-pattern>
        <url-pattern>/admin/contents/delete</url-pattern>
    </servlet-mapping>

</web-app>
